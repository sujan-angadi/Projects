//7 SEGMENT
const int ano_pin = 2;
int a = 3;
int b = 4;
int c = 5;
int d = 6;
int e = 7;
int f = 8;
int g = 9;

//UltraSoinic
const int trigpin = 10;
const int echopin = 11; 
long duration;
int distance;
const int buzz = 12;

//Soil Moisture
const int pin = A0;

//LM35 Temperature
const int lm35 = A1;

void setup() {
  //CODE FOR ULTRASONIC
  pinMode(trigpin, OUTPUT);
  pinMode(echopin, INPUT);
  pinMode(buzz, OUTPUT);

  //LED CODE FOR ANIMAL APPROCIHNG OR PEST APPROACHING
  pinMode(ano_pin, OUTPUT);
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);

  //CODE FOR SOIL MOISTURE
  pinMode(pin, INPUT);
  Serial.begin(9600);

  //GREEN LIGHT
  pinMode(13, OUTPUT);
}

void loop() {

  //THIS CODE IS FOR ULTRASONIC
  digitalWrite(trigpin, LOW);
  delayMicroseconds(2);

  digitalWrite(trigpin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigpin, LOW);

  duration = pulseIn(echopin, HIGH);
  distance = duration * 0.034 / 2;

  delay(100);

  if (distance < 30){
    digitalWrite(buzz, HIGH);
    Serial.println("Animal Approching");
  } else {
    digitalWrite(buzz, LOW);
    Serial.println("No Animal");

  }

  //THIS CODE IS FOR SOIL MOISTUE
  int val = analogRead(pin);
  if (val >= 800){
    Serial.println("Dry Land");
    D_letter();
    digitalWrite(13, LOW);
  } else if (val >= 100 && val <= 800){
    Serial.println("Healthy Land");
    H_letter();
    digitalWrite(13, HIGH);
  } else {
        Serial.println("Wet Land");
    W_letter();
    digitalWrite(13, LOW);

  }

  //ANIMAL CODE
  if (distance < 30){
    A_letter();
    digitalWrite(13, LOW);
  } 

  //THIS IS SOIL CODE ALSO


  //THIS IS TEMPERATURE CODE
int tempVal = analogRead(lm35);
float voltage = tempVal * (5.0 / 1023.0);  
float celsius = voltage * 100.0;           
Serial.print("Temperature: ");
Serial.print(celsius);
Serial.println(" Â°C");

  delay(1000);
}

//Your letter functions:

void A_letter() {
  digitalWrite(ano_pin, HIGH);
  digitalWrite(a, LOW);
  digitalWrite(b, LOW);
  digitalWrite(c, LOW);
  digitalWrite(d, HIGH);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, LOW);
}

void H_letter() {
  digitalWrite(ano_pin, HIGH);
  digitalWrite(a, HIGH);
  digitalWrite(b, LOW);
  digitalWrite(c, LOW);
  digitalWrite(d, HIGH);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, LOW);
}

void D_letter() {
  digitalWrite(ano_pin, HIGH);
  digitalWrite(a, LOW);
  digitalWrite(b, LOW);
  digitalWrite(c, LOW);
  digitalWrite(d, LOW);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, HIGH);
}

void W_letter() {
  digitalWrite(ano_pin, HIGH);
  digitalWrite(a, LOW);
  digitalWrite(b, HIGH);
  digitalWrite(c, HIGH);
  digitalWrite(d, LOW);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, LOW);
}
